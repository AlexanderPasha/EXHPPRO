<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorGray"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/txtCoinName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtCoinName"></LinearLayout>

    <TextView
        android:id="@+id/txtCoinName"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="DASH"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:textColor="@color/colorTextDark"
        android:background="@drawable/round_style"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUY:"
        android:textColor="@color/colorTextDark"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/txtCoinName"
        app:layout_constraintLeft_toRightOf="@+id/txtCoinName"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SELL:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextDark"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="75dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        android:layout_marginStart="75dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline"
        android:orientation="vertical"
        app:layout_constraintGuide_end="192dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="192dp" />

    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/guideline3"
        android:orientation="vertical"
        app:layout_constraintGuide_end="294dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="90dp" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="SPRD:"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorTextDark"
        app:layout_constraintLeft_toRightOf="@+id/textView5"
        android:layout_marginLeft="75dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/txtBtcBuy"></LinearLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTC"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/colorTextDark"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/txtBtcBuy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10sp"
        android:textColor="@color/colorTextDark"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView3"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtBtcSell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10sp"
        android:textColor="@color/colorTextDark"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView5"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2" />

    <TextView
        android:id="@+id/txtBtcSprd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="10sp"
        android:textColor="@color/colorTextDark"
        app:layout_constraintLeft_toLeftOf="@+id/textView19"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2" />

</android.support.constraint.ConstraintLayout>